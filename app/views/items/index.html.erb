<% if user_signed_in? %>
<div class="table-container m-6">
<h1 class="title is-4">Items</h1>
  <table class="table">
    <thead>
    <tr>
      <th><abbr title="Position">ID</abbr></th>
      <th><abbr title="Position">Name</abbr></th>
      <th>Description</th>
      <th><abbr title="Played">Price</abbr></th>
      <th><abbr title="Played">Available Quantity</abbr></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= item.name %></td>
      <td><%= item.description %></td>
      <td><%= item.price %></td>
      <td><%= item.available_quantity %></td>
      <td><%= link_to 'edit', edit_item_path(item) %></td>
    </tr>
    <% end %>
  </tbody>
  </table>
</div>
 <% else %>
  <div>user not authorized</div>
<% end %>